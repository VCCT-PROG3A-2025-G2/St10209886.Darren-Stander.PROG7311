@model TestApp.Models.Farmer

<div style="min-height:70vh; display:flex; flex-direction:column; align-items:center; justify-content:center;">
    <div class="card" style="max-width:430px; width:100%;">
        <h2 class="headline mb-3">Add New Farmer</h2>
        <form asp-action="Add" method="post" style="text-align:left;">
            <div class="form-group mb-3">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required />
            </div>
            <div class="form-group mb-3">
                <label for="ContactInfo">Contact Info</label>
                <input type="text" class="form-control" id="ContactInfo" name="ContactInfo" required />
            </div>
            <div class="form-group mb-4">
                <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" name="Address" required />
            </div>
            <div class="actions" style="gap:.7rem;">
                <button type="submit" class="btn btn-primary">Save Farmer</button>
                <a href="/Farmer" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
